@model IEnumerable<DonationPage.Models.DonationEntry>

@{
    ViewBag.Title = "Approved stories";
}

<h2>Approved stories</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DonationTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DonationTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DonationID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DonationID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DonationID })
            </td>
        </tr>
    }

</table>


